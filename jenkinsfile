pipeline {
    agent any

    environment {
        GITHUB_REPO_URL = "https://github.com/hrishikeshkhandagale/E-commerce-project-springBoot.git"
        EC2_USER = "ubuntu"
        EC2_HOST = "3.7.71.48"
        SSH_KEY = "python"       // Jenkins SSH Credential ID
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main', url: "${GITHUB_REPO_URL}"
            }
        }

        stage('Build with Maven') {
            steps {
                sh 'mvn clean package -DskipTests'
            }
        }

        stage('Transfer Artifact to EC2') {
            steps {
                sshagent(credentials: ["${SSH_KEY}"]) {
                    sh """
                        scp -o StrictHostKeyChecking=no target/*.jar ${EC2_USER}@${EC2_HOST}:/opt/app/app.jar
                    """
                }
            }
        }

        stage('Restart Spring Boot Service') {
            steps {
                sshagent(credentials: ["${SSH_KEY}"]) {
                    sh """
                        ssh -o StrictHostKeyChecking=no ${EC2_USER}@${EC2_HOST} "sudo systemctl restart springapp"
                    """
                }
            }
        }

        stage('Health Check') {
            steps {
                sh "curl -f http://${EC2_HOST}:8080/login || exit 1"
            }
        }
    }

    post {
        success {
            echo "üöÄ Deployment Successful! Spring Boot is LIVE at http://${EC2_HOST}:8080/login"
        }
        failure {
            echo "‚ùå Deployment Failed ‚Äî Check pipeline logs"
        }
    }
}

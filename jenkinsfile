pipeline {
    agent any

    environment {
        GITHUB_REPO_URL = "https://github.com/hrishikeshkhandagale/E-commerce-project-springBoot.git"
        EC2_USER = "ubuntu"
        EC2_HOST = "13.200.215.86"
        SSH_KEY = "python"
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main', url: "${GITHUB_REPO_URL}"
            }
        }

        stage('Build with Maven') {
            steps {
                sh 'mvn clean package -DskipTests'
            }
        }

        stage('Transfer Artifact to EC2') {
            steps {
                sshagent(credentials: ["${SSH_KEY}"]) {
                    sh """
                        JAR_NAME=\$(ls target/*.jar | head -1)
                        echo "Uploading: \$JAR_NAME"
                        scp -o StrictHostKeyChecking=no \$JAR_NAME ${EC2_USER}@${EC2_HOST}:/opt/app/app.jar
                    """
                }
            }
        }

        stage('Restart Spring Boot Service') {
            steps {
                sshagent(credentials: ["${SSH_KEY}"]) {
                    sh """
                        ssh -o StrictHostKeyChecking=no ${EC2_USER}@${EC2_HOST} \
                        "sudo systemctl daemon-reload && sudo systemctl restart springapp"
                    """
                }
            }
        }

        stage('Health Check') {
            steps {
                sh """
                    echo "‚è≥ Waiting 25 sec for Spring Boot to start..."
                    sleep 25

                    for i in 1 2 3 4 5 6; do
                        echo "üîç Checking health (attempt \$i)..."
                        STATUS=\$(curl -o /dev/null -s -w "%{http_code}" http://${EC2_HOST}:8080/login)

                        if [ "\$STATUS" = "200" ] || [ "\$STATUS" = "302" ]; then
                            echo "üíö Application is healthy"
                            exit 0
                        fi

                        echo "‚ùó Not ready ‚Äî retrying in 6 sec"
                        sleep 6
                    done

                    echo "‚ùå Application Health Check Failed"
                    exit 1
                """
            }
        }
    }

    post {
        success {
            echo "üöÄ Deployment Successful! LIVE URL ‚Üí http://${EC2_HOST}:8080/login"
        }
        failure {
            echo "‚ùå Deployment Failed ‚Äî Check pipeline logs"
        }
    }
}
